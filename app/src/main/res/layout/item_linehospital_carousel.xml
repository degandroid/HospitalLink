<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_myfollow"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/hl_bg_hospital"
        />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
        <TextView
            android:alpha="8"
            android:padding="10dp"
            android:background="@drawable/hl_bg_alpha_frame_rectangular"
            android:layout_width="wrap_content"
            android:textColor="@color/hl_color_white"
            android:textSize="@dimen/hl_textsize_24"
            android:text="医院名称"
            android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/hl_textsize_15"
                android:text="距离"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/hl_icon_point"
                android:textColor="@color/hl_color_white"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/hl_global_dialog_distance_20"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:drawablePadding="10dp"
                android:layout_height="wrap_content"
                android:textColor="@color/hl_textcolor_dark"
                android:textSize="@dimen/hl_textsize_15"
                android:drawableTop="@mipmap/hl_icon_register_uncolor"
                android:text="实时挂号" />
        </LinearLayout>

        <TextView
            android:layout_width="1px"
            android:background="@color/hl_color_line"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:textColor="@color/hl_textcolor_dark"
                android:textSize="@dimen/hl_textsize_15"
                android:drawableTop="@mipmap/hl_icon_appoint_uncolor"
                android:text="手机预约" />
        </LinearLayout>

        <TextView
            android:layout_width="1px"
            android:background="@color/hl_color_line"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:textColor="@color/hl_textcolor_dark"
                android:textSize="@dimen/hl_textsize_15"
                android:drawableTop="@mipmap/hl_icon_doctor_uncolor"
                android:text="科室医生" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>