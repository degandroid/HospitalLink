<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hl_color_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/re_interrogation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hl_color_white"
            android:padding="@dimen/hl_global_distance_15">

            <ImageView
                android:id="@+id/iv_interrogation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/hl_icon_interrogation_message" />

            <TextView
                android:id="@+id/tv_interrogation_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_interrogation"
                android:layout_toRightOf="@id/iv_interrogation"
                android:gravity="top"
                android:text="问诊消息提醒"
                android:textColor="@color/hl_textcolor_dark"
                android:textSize="@dimen/hl_textsize_18" />

            <TextView
                android:id="@+id/tv_interrogation_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_interrogation"
                android:layout_below="@id/tv_interrogation_top"
                android:layout_toRightOf="@id/iv_interrogation"
                android:gravity="bottom"
                android:text="问诊消息提醒"
                android:textColor="@color/hl_textcolor_light"
                android:textSize="@dimen/hl_textsize_15" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="时间"
                android:textColor="@color/hl_textcolor_light"
                android:textSize="@dimen/hl_textsize_15" />
        </RelativeLayout>

        <ImageView style="@style/hl_global_underline_bg" />

        <RelativeLayout
            android:id="@+id/re_hosptialline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hl_color_white"
            android:padding="@dimen/hl_global_distance_15">

            <ImageView
                android:id="@+id/iv_hospitalline"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/hl_icon_hosptialline_message" />

            <TextView
                android:id="@+id/tv_hospitalline_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_hospitalline"
                android:layout_toRightOf="@id/iv_hospitalline"
                android:gravity="top"
                android:text="链医"
                android:textColor="@color/hl_textcolor_dark"
                android:textSize="@dimen/hl_textsize_18" />

            <TextView
                android:id="@+id/tv_hospitalline_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_hospitalline"
                android:layout_below="@id/tv_hospitalline_top"
                android:layout_toRightOf="@id/iv_hospitalline"
                android:gravity="bottom"
                android:text="欢迎加入链医"
                android:textColor="@color/hl_textcolor_light"
                android:textSize="@dimen/hl_textsize_15" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="时间"
                android:textColor="@color/hl_textcolor_light"
                android:textSize="@dimen/hl_textsize_15" />
        </RelativeLayout>

        <ImageView style="@style/hl_global_underline_bg" />

        <RelativeLayout
            android:id="@+id/re_appoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hl_color_white"
            android:padding="@dimen/hl_global_distance_15">

            <ImageView
                android:id="@+id/iv_appoint"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/hl_icon_appoint_message" />

            <TextView
                android:id="@+id/tv_appoint_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_appoint"
                android:layout_toRightOf="@id/iv_appoint"
                android:gravity="top"
                android:text="预约消息提醒"
                android:textColor="@color/hl_textcolor_dark"
                android:textSize="@dimen/hl_textsize_18" />

            <TextView
                android:id="@+id/tv_appointbottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_appoint"
                android:layout_below="@id/tv_appoint_top"
                android:layout_toRightOf="@id/iv_appoint"
                android:gravity="bottom"
                android:text="您已成功预约"
                android:textColor="@color/hl_textcolor_light"
                android:textSize="@dimen/hl_textsize_15" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="时间"
                android:textColor="@color/hl_textcolor_light"
                android:textSize="@dimen/hl_textsize_15" />
        </RelativeLayout>

        <ImageView style="@style/hl_global_underline_bg" />

        <RelativeLayout
            android:id="@+id/re_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hl_color_white"
            android:padding="@dimen/hl_global_distance_15">

            <ImageView
                android:id="@+id/iv_register"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/hl_icon_register_message" />

            <TextView
                android:id="@+id/tv_register_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_register"
                android:layout_toRightOf="@id/iv_register"
                android:gravity="top"
                android:text="挂号消息提醒"
                android:textColor="@color/hl_textcolor_dark"
                android:textSize="@dimen/hl_textsize_18" />

            <TextView
                android:id="@+id/tv_register_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_register"
                android:layout_below="@id/tv_register_top"
                android:layout_toRightOf="@id/iv_register"
                android:gravity="bottom"
                android:text="您已成功挂号"
                android:textColor="@color/hl_textcolor_light"
                android:textSize="@dimen/hl_textsize_15" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="时间"
                android:textColor="@color/hl_textcolor_light"
                android:textSize="@dimen/hl_textsize_15" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
